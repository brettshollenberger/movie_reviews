    <a class="brand" href="/movies">MORRISEY REVIEWS MOVIES YOU MIGHT HAVE SEEN</a>
    <div class="nav-collapse collapse">
      <ul class="nav">
          <% if user_signed_in? %>
            <li><%= link_to 'PROFILE', edit_user_registration_path, { :class => "active" } %> |</li>
            <li><%= link_to "LOGOUT", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "SIGNUP", new_user_registration_path %> |</li>
